<h1>Update Pet</h1>

 
<h2>Edits for <%= @pet.name %></h2>
 
  <form action="/pets/<%= @pet.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    <label>Edit the Pets's Name:</label>
    <br>
    <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>">
 
    <br>
    <p>Select an existing owner or create a new one below.</p>
 
 
    <h3>Existing Owners</h3>
    <% @owners.each do |owner| %>
      <% if @pet.owner == owner %>
        <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" checked> <%= owner.name %><br>
      <% else %>
        <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>"> <%= owner.name %><br>
      <% end %>
      <input type="radio" name="pet[owner_id]" id="new_owner"> Create New Owner<br>
    <% end %>
    <br>

    <h3>New Owner</h3>
    <label>Owner Name: </label>
    <br>
    <input type="text" name="owner[name]" id="owner_name">
    <br><br>
 
    <input type="submit" value="Update Pet">
  </form>
